@model Car_Dealership.Models.Auto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Auto</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PutAuto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group" style="background-color: #b7ffc9; text-align: center; border: 1px solid darkgrey">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" value="@Model.Brand" class="form-control"/>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color: #b7ffc9; text-align: center; border: 1px solid darkgrey">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" value="@Model.Year" class="form-control"/>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color: #b7ffc9; text-align: center; border: 1px solid darkgrey">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" value="@Model.Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color: #b7ffc9; text-align: center; border: 1px solid darkgrey">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" value="@Model.Color" class="form-control"/>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color: #b7ffc9; text-align: center; border: 1px solid darkgrey">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" value="@Model.Capacity" class="form-control"/>
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group" style="background-color: #b7ffc9; text-align: center; border: 1px solid darkgrey">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div style="background-color: #b7ffc9; text-align: center; border: 1px solid darkgrey">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}